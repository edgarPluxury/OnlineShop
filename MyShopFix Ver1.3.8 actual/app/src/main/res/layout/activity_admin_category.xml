<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите категорию"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="20dp">

    </TextView>

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/slogan"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/car"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/moto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/boat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/service"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/first_line"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/dress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/sweater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/hats"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/second_line"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/phone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/pc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/fridge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/fourth_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/third_line"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/bicycle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/books"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/collecting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>
        <ImageView
            android:id="@+id/guitar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            android:layout_margin="10dp">

        </ImageView>

    </LinearLayout>

</RelativeLayout>